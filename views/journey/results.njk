{% extends "layout.njk" %}

{% set style = "common, journey" %}

{% block title %}Verbindungen – {{ fromName }} → {{ toName }}
{% endblock %}

{% block content %}
  <h2>{{ fromName }} <img src="/public/icons/rarrow.min.png" alt="→" class="arrow-inline"> {{ toName }}</h2>
  <a href="/journey{#?from={{ fromName | urlencode }}&to={{ toName | urlencode }}#}">Neue Suche</a><br><br>
  {% for journey in journeys %}
    {% include "journey/partials/journey.njk" %}
    <br>
  {% endfor %}
  <div style="display:flex; justify-content:space-between; margin-top:12px;">
    {% if earlierRef %}
      <a href="/journey/search?from={{ fromName | urlencode }}&to={{ toName | urlencode }}&earlierThan={{ earlierRef | urlencode }}">
        Frühere Verbindungen <img src="/public/icons/uarrow.min.png" alt="↑" class="arrow-inline">
      </a>
    {% else %}
      <span></span>
    {% endif %}
    {% if laterRef %}
      <a href="/journey/search?from={{ fromName | urlencode }}&to={{ toName | urlencode }}&laterThan={{ laterRef | urlencode }}">
        Spätere Verbindungen <img src="/public/icons/darrow.min.png" alt="↓" class="arrow-inline">
      </a>
    {% endif %}
  </div>

  <br/>
  <div style="text-align: center;">
      <a href="https://www.bahn.de/buchung/start#?SO={{ fromName | urlencode }}&ZO={{ toName | urlencode }}"
         target="_blank"
         rel="noopener">
        <img src="/public/icons/rb.min.png" alt="Bahn">
    </a>
  </div>
{% endblock %}
