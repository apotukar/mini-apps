{
  "name": "db-wrapper",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "create-certs": "./scripts/create_certs.sh",
    "init-tokens": "npm run init-tokens",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "node nodemon.js",
    "start": "node index.js",
    "fix": "npm-run-all lint:fix format",
    "check": "npm-run-all check:js check:json",
    "check:js": "prettier --check \"**/*.js\" \"!**/*.min.js\"",
    "check:json": "prettier --check \"**/*.json\"",
    "format": "npm-run-all format:js format:css format:json",
    "format:js": "prettier --write \"**/*.js\" \"!**/*.min.js\"",
    "format:json": "prettier --write \"**/*.json\"",
    "format:css": "prettier --write \"**/*.css\" \"!**/*.min.css\"",
    "lint:check": "npm-run-all lint:js:check lint:css:check",
    "lint:js:check": "eslint \"**/*.js\"",
    "lint:css:check": "stylelint \"**/*.css\" \"!**/*.min.css\"",
    "lint:fix": "npm-run-all lint:js:fix lint:css:fix",
    "lint:js:fix": "eslint \"**/*.js\" --fix",
    "lint:css:fix": "stylelint \"**/*.css\" \"!**/*.min.css\" --fix",
    "minify": "npm-run-all -p minify:css minify:js minify:icons",
    "minify:onlygit": "npm-run-all -p minify:css:onlygit minify:js:onlygit minify:icons:onlygit",
    "minify:css": "./scripts/minify.sh css public ./minify.config.json false",
    "minify:css:onlygit": "./scripts/minify.sh css public ./minify.config.json true",
    "minify:js": "./scripts/minify.sh js public/js ./minify.config.json false",
    "minify:js:onlygit": "./scripts/minify.sh js public/js ./minify.config.json true",
    "minify:icons": "./scripts/minify.sh icons public/icons ./minify.config.json false",
    "minify:icons:onlygit": "./scripts/minify.sh icons public/icons ./minify.config.json true"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "cheerio": "^1.1.2",
    "cookie-parser": "^1.4.7",
    "db-vendo-client": "^6.10.5",
    "dotenv": "^17.2.3",
    "epub": "^1.3.0",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "marked": "^17.0.0",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.1.11",
    "nunjucks": "^3.2.4",
    "puppeteer": "^24.31.0",
    "sharp": "^0.34.5",
    "webdav": "^5.8.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "clean-css-cli": "^5.6.3",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-discard-comments": "^7.0.5",
    "prettier": "^3.6.2",
    "stylelint": "^16.26.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-prettier": "^5.0.3",
    "terser": "^5.44.1"
  }
}
