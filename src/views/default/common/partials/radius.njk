  <label>{{ radiusLabel | default("Radius") }}</label><br>
  <select
    name="{{ radiusName }}"
    {% if radiusId %}id="{{ radiusId }}"{% endif %}
    {% if radiusClassName %}class="{{ radiusClassName }}"{% endif %}
    {% if radiusOnChange %}onchange="{{ radiusOnChange }}"{% endif %}
  >
    {% set rValue = radius %}
    {% if radiusOptions is not defined %}
      {% set radiusOptions = [1, 2, 3, 5, 8, 15, 20, 30] %}
    {% endif %}
    {% for r in radiusOptions %}
      <option value="{{ r }}"{% if rValue == r %} selected{% endif %}>{{ r }} km</option>
    {% endfor %}
  </select>
