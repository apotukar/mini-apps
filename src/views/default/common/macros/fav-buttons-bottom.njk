{% macro favButtons(basePath) %}
<div style="margin-top: 10px;">
  <form method="GET" action="{{ basePath }}/clear-favs">
    <button type="submit" class="btn btn-danger">
      <img src="/public/images/delete.min.png" alt="Reload" class="btn-icon">
      Favoriten löschen
    </button>
  </form>

  <form method="GET" action="{{ basePath }}/show-config-favs">
    <button type="submit" class="btn btn-secondary">
      <img src="/public/images/reload.min.png" alt="Reload" class="btn-icon">
      Standard-Favoriten hinzufügen
    </button>
  </form>
</div>
{% endmacro %}
